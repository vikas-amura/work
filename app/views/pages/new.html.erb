<style type="text/css">
.mainDiv{
	margin-left: 400px;
}
</style>
<div class="mainDiv">

<h1>New</h1>

<% if @page.errors.any? %>
<h5>The following errors prevented the article from getting created</h5>
<ul>
<% @page.errors.full_messages.each do |msg| %>
<li><%= msg %></li>
<% end %>
</ul>
<% end %>

<%= form_for @page do | f| %>
<%= f.label :title %><br></br>
<%= f.text_field  :title%> <br><br>
<%= f.label :Description %><br></br>
<%= f.text_area  :description%><br></br>
<%= f.submit%><br></br>
<% end %>

<%= link_to 'back ',pages_path%>
</div>