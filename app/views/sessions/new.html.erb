 <h2 class="form-heading">login</h2>
  <div class="app-cam">
<%= form_for(:session, :html=>{class: "" ,  role: "form"}, url: login_path) do |f| %>            
      
      <%= f.email_field  :email , class: "form-control" ,placeholder: "Email",required: true%> 
		
     <%= f.password_field  :password , class: "form-control" ,placeholder: "Password",required: true%> 		
   
	  	<div class="submit">
    
      <%= f.submit("Login",class:"btn btn-danger") %>
      </div>
		

    <ul class="new">
			<li class="new_left"><p><a href="#">Forgot Password ?</a></p></li>
			<li class="new_right"><p class="sign">New here ?<%= link_to 'Sign Up', {:controller => 'logins', :action => 'register'} %>
			</p></li>
			<div class="clearfix"></div>
		</ul>
<% end %>
  </div>  